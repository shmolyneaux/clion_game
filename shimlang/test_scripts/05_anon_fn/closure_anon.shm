// Test anonymous functions capturing variables
let x = 5;
let add_x = fn(y) { x + y };

print(add_x(10));

// Test closure that captures from parent scope
fn make_adder(n) {
    let adder = fn(val) { n + val };
    adder
}

let add_5 = make_adder(5);
let add_10 = make_adder(10);

print(add_5(3));
print(add_10(3));
