{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/*"],
  "exclude": ["dist/**", "node_modules/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "types": ["vite/client"],
    "declarationMap": true,
    "declaration": true
  }
}
