:root {
    --main-font: "PublicSans", sans-serif;

    --bg-color: light-dark(#fff, #111);
    --text-color: light-dark(#333, #eee);

    --code-bg-color-dark: #2a2a2a;
    --code-bg-color: light-dark(#f5f5f5, var(--code-bg-color-dark));

    color-scheme: light dark;
}

* {
    margin: 0;
    padding: 0;
}

@media (prefers-color-scheme: dark) {
    html {
        color-scheme: dark;
    }
}

html {
    font-family: var(--main-font);
    background-color: var(--bg-color);
    color: var(--text-color);
    font-size: 16px;
    line-height: 1.6;
    color-scheme: light dark;
}

body {
    margin: 1rem auto;
    padding: 1rem 2rem;
}

code {
    font-family: "IosevkaFtl", monospace;
}

section.columns {
    display: flex;
    gap: 2.8em;
}

nav.table-of-contents {
    flex-basis: 16em;
    flex-grow: 0;
    flex-shrink: 0;

    height: auto;
    max-height: 80vh;

    overflow-y: scroll;

    font-size: 90%;
    top: 40px;
    position: sticky;

    background: var(--code-bg-color);
    padding: 1em 1.2em;
    border-radius: 0.5em;

    .logo {
        width: 100%;
        height: 6em;
        object-fit: contain;
    }

    a {
        text-decoration: none;
    }

    li {
        list-style: none;

        &[data-level="1"] {
            display: none;
        }

        &[data-level="2"] {
            padding-left: 0em;
        }

        &[data-level="3"] {
            padding-left: .5em;
        }

        &[data-level="4"] {
            padding-left: 1em;
        }

        &[data-level="5"] {
            padding-left: 1em;
        }
    }

    h1, h2, h3, h4, h5, h6 {
        font-size: inherit;
    }
}

h1 {
    font-weight: 900;
    font-size: 500%;
}

@media screen and (max-width: 600px) {
    h1 {
        font-size: 300%;
    }
}

h2 {
    font-weight: 900;
    font-size: 190%;
}

h3 {
    font-weight: 700;
    font-size: 120%;
}

h2 {
    margin-block-start: 1.2em;
    margin-block-end: .2em;
}

h3 {
    margin-block-start: 1.8em;
    margin-block-end: .4em;
}

h4 {
    margin-block-start: 2em;
    margin-block-end: .6em;
}

@media screen and (max-width: 920px) {
    nav.table-of-contents {
        display: none;
    }
}

main {
    max-width: min(920px, 100%);
    overflow-x: hidden;
}

p {
    margin-block-start: .2em;
    margin-block-end: 1.2em;
    padding: 0;
}

a.anchor {
    text-decoration: none;
    color: inherit;
}

figure.code-block {
    margin-block-start: 1em;
    margin-block-end: 1em;

    font-size: .8em;
    color-scheme: dark;
    border-radius: .4em;
}

code:not(.scroll-wrapper) {
    font-size: .85em;
    background: light-dark(#fff6c9, #333);
    padding: .2em .3em;
    border-radius: .2em;
}

ul, ol {
    margin-block-start: 1.2em;
    margin-block-end: 1.2em;
    padding-inline-start: 2em;
}

li > ul, li > ol {
    margin-block: 0em;
}

.markup-container {
    :first-child {
        margin-block-start: 0em;
    }

    :last-child {
        margin-block-end: 0em;
    }
}

.dialog {
    margin-block-start: 1.2em;
    margin-block-end: 1.2em;
    margin-inline-start: auto;
    margin-inline-end: auto;

    display: flex;
    flex-direction: row;
    font-size: 1.2rem;
    overflow: hidden;

    .dialog-head {
        align-self: flex-start;
        --head-side: 2.3em;
        flex-basis: var(--head-side);
        width: var(--head-side);
        height: var(--head-side);
        margin: 0rem 0.4rem;
        flex-shrink: 0;

        img,
        embed,
        svg {
            width: 100%;
            height: auto;
        }

        &.round {
            img,
            embed,
            svg {
                border-radius: 50%;
            }
        }
    }

    .dialog-text {
        max-width: var(--dialog-width);
        align-self: flex-start;
        border-radius: 0.8em;

        padding-inline: 0.6em;
        padding-block: 0.4em;

        overflow: hidden;
        font-size: 0.89rem;
        background-color: var(--bubble-color);
        color: var(--text-color);

        @media (prefers-color-scheme: light) {
            --bubble-color: oklch(93.46% 0.0187 256.35);
            --text-color: oklch(26.03% 0 0);
        }
        @media (prefers-color-scheme: dark) {
            --bubble-color: oklch(29.31% 0.0434 266.22);
            --text-color: oklch(99% 0 0);
        }

        .full-width,
        .code-block {
            max-width: 100%;

            code {
                border: none !important;
            }
        }
    }

    &.right {
        flex-direction: row-reverse;

        .dialog-text {
            --bubble-color: oklch(62.44% 0.2054 255.56);
            --text-color: oklch(0.98 0 0);
            color-scheme: dark;

            --link-color: oklch(97.89% 0 32.16);
            --text-decoration-color: oklch(97.89% 0 32.16);
        }
    }
}

blockquote {
    margin: 1em 0;
    padding: .2em .4em;
    border-left: 4px solid #ccc;
    background-color: var(--code-bg-color);

    :first-child {
        margin-block-start: 0;
    }

    :last-child {
        margin-block-end: 0;
    }
}

footer {
    margin-top: 2em;
    padding-top: 1em;
    border-top: 1px solid light-dark(#ddd, #333);
    font-size: 0.9em;
    color: light-dark(#666, #999);
    text-align: center;

    display: flex;
    flex-direction: row-wrap;
    justify-content: center;
    gap: 2.8em;
}

footer a {
    color: inherit;
    text-decoration: underline;
}

footer p {
    margin-block-start: 0.5em;
    margin-block-end: 0.5em;
}
